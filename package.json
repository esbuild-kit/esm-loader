	"version": "0.0.0-semantic-release",
	"publishConfig": {
		"access": "public"
	},
	"description": "Node.js loader for compiling TypeScript modules to ESM",
	"keywords": [
		"esbuild",
		"loader",
		"node",
		"esm",
		"typescript"
	],
	"license": "MIT",
	"repository": "esbuild-kit/esm-loader",
	"author": {
		"name": "Hiroki Osame",
		"email": "hiroki.osame@gmail.com"
	},
	"type": "module",
	"files": [
		"dist"
	],
	"main": "./dist/index.js",
	"exports": "./dist/index.js",
	"scripts": {
