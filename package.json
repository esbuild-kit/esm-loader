		"clean-pkg-json": "^1.2.0",
		"esbuild": "~0.18.20",
		"eslint": "^8.48.0",
		"execa": "^8.0.1",
		"fs-fixture": "^1.2.0",
		"get-node": "^14.2.1",
		"manten": "^1.1.0",
		"pkgroll": "^1.11.0",
		"semver": "^7.5.4",
		"source-map-support": "^0.5.21",
		"type-fest": "^4.3.1",
		"typescript": "^5.2.2"
	},
	"eslintConfig": {
		"extends": "@pvtnbr",
		"ignorePatterns": [
			"tests/fixtures"
		]
