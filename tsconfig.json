{
	"compilerOptions": {
		"strict": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"outDir": "dist",

		"module": "esnext",
		"target": "esnext",

		"paths": {
			"utils/*": ["./tests/utils/*"]
		}

		// Prevents mts -> mjs conversion
		// "moduleResolution": "node",
	},
	"include": [
		"src",
		"tests"
	]
}
